package templates

import "tipjar/internal/models"
import "fmt"

templ Dashboard(user *models.User, jars []*models.TipJar) {
	@Base("Dashboard", user) {
		<div class="max-w-7xl mx-auto">
			<!-- Welcome Header -->
			<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
				<div class="flex items-center justify-between">
					<div>
						<h1 class="text-2xl font-bold text-gray-900">Welcome back, { user.Name }!</h1>
						<p class="text-gray-600 mt-1">Manage your tip jars and track offenses</p>
					</div>
					<div class="flex items-center space-x-4">
						if user.Avatar != nil {
							<img src={ *user.Avatar } alt="Avatar" class="w-12 h-12 rounded-full">
						} else {
							<div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center">
								<span class="text-white font-bold text-lg">
									{ string([]rune(user.Name)[0]) }
								</span>
							</div>
						}
					</div>
				</div>
			</div>

			<!-- Quick Actions -->
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
				<a href="/jars/create" class="bg-blue-600 hover:bg-blue-700 text-white p-6 rounded-lg shadow-sm transition-colors">
					<div class="flex items-center">
						<svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
						</svg>
						<div>
							<h3 class="text-lg font-semibold">Create Tip Jar</h3>
							<p class="text-blue-100 text-sm">Start a new jar with friends</p>
						</div>
					</div>
				</a>
				
				<a href="/jars/join" class="bg-green-600 hover:bg-green-700 text-white p-6 rounded-lg shadow-sm transition-colors">
					<div class="flex items-center">
						<svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
						</svg>
						<div>
							<h3 class="text-lg font-semibold">Join Tip Jar</h3>
							<p class="text-green-100 text-sm">Enter an invite code</p>
						</div>
					</div>
				</a>
				
				<a href="/profile" class="bg-gray-600 hover:bg-gray-700 text-white p-6 rounded-lg shadow-sm transition-colors">
					<div class="flex items-center">
						<svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
						</svg>
						<div>
							<h3 class="text-lg font-semibold">My Profile</h3>
							<p class="text-gray-100 text-sm">View and edit profile</p>
						</div>
					</div>
				</a>
			</div>

			<!-- My Tip Jars -->
			<div class="bg-white rounded-lg shadow-sm border border-gray-200">
				<div class="px-6 py-4 border-b border-gray-200">
					<h2 class="text-lg font-semibold text-gray-900">My Tip Jars</h2>
				</div>
				<div class="p-6">
					if len(jars) == 0 {
						<div class="text-center py-8">
							<svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
							</svg>
							<h3 class="text-lg font-medium text-gray-900 mb-2">No tip jars yet</h3>
							<p class="text-gray-600 mb-4">Create your first tip jar or join an existing one to get started.</p>
							<div class="space-x-4">
								<a href="/jars/create" class="btn btn-primary">Create Tip Jar</a>
								<a href="/jars/join" class="btn btn-secondary">Join Tip Jar</a>
							</div>
						</div>
					} else {
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
							for _, jar := range jars {
								<div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
									<h3 class="font-semibold text-gray-900 mb-2">{ jar.Name }</h3>
									if jar.Description != nil {
										<p class="text-gray-600 text-sm mb-3">{ *jar.Description }</p>
									}
									<div class="flex items-center justify-between">
										<span class="text-xs text-gray-500">Code: { jar.InviteCode }</span>
										<a href={ templ.URL(fmt.Sprintf("/jars/%d", jar.ID)) } class="text-blue-600 hover:text-blue-800 text-sm font-medium">
											View â†’
										</a>
									</div>
								</div>
							}
						</div>
					}
				</div>
			</div>
		</div>
	}
}